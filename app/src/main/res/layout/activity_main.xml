<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/refresh"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/oldpaper"
    android:id="@+id/asa"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:typeface="serif"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="COVID-19 TRACKER"
            android:textSize="27dp"
            android:textColor="@color/black"
            />
        <TextView
            android:typeface="serif"
            android:layout_width="0dp"
            android:id="@+id/u_time"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LAST UPDATE 4 MIN AGO"
            android:textSize="16dp"
            android:layout_gravity="start"
            android:layout_margin="2dp"
            android:background="#D4FBBC"
            android:textColor="#090B0A"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:orientation="horizontal"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:typeface="serif"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Confirmed"
                android:textColor="#9B1212"
                android:textSize="18dp"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_coronavirus_24"/>
            <TextView
                android:id="@+id/confirmedcases"
                android:typeface="serif"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#9B1212"
                android:layout_gravity="center"
                android:textSize="15dp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:typeface="serif"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="#FF6200EE"
                android:layout_gravity="center"
                android:textSize="18dp"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:src="@drawable/bed"
                app:tint="@color/purple_500" />
            <TextView
                android:typeface="serif"
                android:layout_weight="1"
                android:id="@+id/active_cases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#FF6200EE"
                android:layout_gravity="center"
                android:textSize="15dp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:typeface="serif"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deceased"
                android:textColor="#BC7203"
                android:layout_gravity="center"
                android:textSize="18dp"
                />
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                app:tint="#BC7203"
                android:src="@drawable/dangerr"/>

            <TextView
                android:typeface="serif"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deceased_cases"
                android:text="0"
                android:textColor="#BC7203"
                android:layout_gravity="center"
                android:textSize="16dp"
                />

        </LinearLayout>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:id="@+id/rv"/>

</LinearLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>